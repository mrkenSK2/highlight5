{
    "name": "scroll",
    "description": "detect scroll",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["tabs"],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": ["content.js"]
        }
    ],
    "commands": {
        "action1": {
            "suggested_key": {
                "default": "Ctrl+Shift+H",
                "mac": "MacCtrl+H"
            },
            "description": "Run extension."
        }
      }
}
